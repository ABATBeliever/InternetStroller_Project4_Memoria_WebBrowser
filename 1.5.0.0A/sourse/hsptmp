*ISWindowExit
gsel 0

title "Close [1/2] - Popup/Stbar/MultiTab"
DestroyMenu hMenu.0
if ( IsWindowVisible(hWnd6) ){SetWindowPos hWnd6, 0, 0, 0, 0, 0, 0x83}
if funcmanager = "already" {gsel 5,-1}
if ver_about = "use" {gsel 4,-1}
