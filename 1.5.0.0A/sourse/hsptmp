p1 = (GetWindowTextLengthW(hEditUrl) + 1) * 2
sdim bufTmp, p1
GetWindowText hEditUrl, varptr(bufTmp), p1
urlTmp = bufTmp
ShellExecuteW 0, "open", pushbrowser, urltmp, 0, 10
gsel 0
return

